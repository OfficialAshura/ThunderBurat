local Main = MakeTab({Name = "Main"})

MakeNotifi({
  Title = "ThunderBurat",
  Text = "WelcomeToThunderBurat",
  Time = 3
})

-- Configuration
local autoRollDelay = 5 -- seconds
local autoRollEnabled = false

-- Get Pet Go service
local PetGoService = game:GetService("ReplicatedStorage"):WaitForChild("PetGo")

-- Function to roll pets
local function rollPets()
    local args = {}
    PetGoService:WaitForChild("RollPet"):FireServer(unpack(args))
end

-- Toggle auto-roll function
local function toggleAutoRoll()
    autoRollEnabled = not autoRollEnabled
    if autoRollEnabled then
        autoRollLoop()
    end
end

-- Auto-roll loop
local function autoRollLoop()
    while autoRollEnabled do
        rollPets()
        wait(autoRollDelay)
    end
end

local Toggle = AddToggle(Main, {
  Name = "Auto Rolling",
  Default = false,
  Callback = function(state)
    toggleAutoRoll()
  end
})
